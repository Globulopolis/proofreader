<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldset name="basic"
	          addfieldpath="components/com_proofreader/models/fields">
		<field
				name="typo_comment"
				type="textarea"
				class="proofreader_comment"
				label="COM_PROOFREADER_FIELD_COMMENT_LABEL"
				description="COM_PROOFREADER_FIELD_COMMENT_DESC"
				rows="5"
				cols="50"
				/>
		<field
				name="captcha"
				type="ProofreaderCaptcha"
				label="COM_PROOFREADER_FIELD_CAPTCHA_LABEL"
				description="COM_PROOFREADER_FIELD_CAPTCHA_DESC"
				validate="captcha"
				namespace="proofreader"
				/>
	</fieldset>
	<fieldset name="hidden">
		<field
				name="typo_text"
				type="hidden"
				default=""
				/>
		<field
				name="typo_prefix"
				type="hidden"
				default=""
				/>
		<field
				name="typo_suffix"
				type="hidden"
				default=""
				/>
		<field
				name="page_url"
				type="hidden"
				default=""
				/>
		<field
				name="page_title"
				type="hidden"
				default=""
				/>
		<field
				name="hash"
				type="hidden"
				default=""
				/>
	</fieldset>
</form>
